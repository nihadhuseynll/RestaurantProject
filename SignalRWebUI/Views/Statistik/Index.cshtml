			$(document).ready(() => {

				var connection = new signalR.HubConnectionBuilder()
					.withUrl("https://localhost:7270/SignalRHub")
					.build();

				connection.start().then(() => {
					$("#connstatus").text(connection.state);

					setInterval(() => {
						connection.invoke("SendStatistiks");
					}, 1000);

				}).catch((err) => { console.log(err) });


