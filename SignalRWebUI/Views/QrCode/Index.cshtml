
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Qr Code İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post" asp-action="Index" asp-controller="QrCode">
					<input type="text" name="value"/>
					<input type="submit" value="Qr Code Oluştur" class="btn btn-warning"/>
					@if (ViewBag.QrCodeImage != null)
					{
						<img src="@ViewBag.QrCodeImage" alt="" style="width:200px;height:200px;"/>
					}
				</form>
			</div>
		</div>
	</div>
</div>

