@model CreateAboutDto

@{
	ViewData["Title"] = "CreateAbout";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkimzida Islemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Hakkimizda Girisi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Title">Baslik Adini Giriniz</label>
								<input type="text" class="form-control" asp-for="Title" id="Title" placeholder="Enter Title Name">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="ImageUrl">Fotograf Linki giriniz </label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl" placeholder="Enter Image Link">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Description">Aciklama yapiniz</label>
								<input type="text" class="form-control" asp-for="Description" id="Description" placeholder="Enter Description">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success">Submit</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

