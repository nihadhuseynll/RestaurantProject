@model UpdateAboutDto

@{
	ViewData["Title"] = "UpdateAbout";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımızda Sayfası İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Hakkimizda Sayfası Güncelleme İşlemleri</div>
						</div>
						<div class="card-body">
							<input type="hidden" asp-for="AboutId" />
							<div class="form-group">
								<label for="Title">Başlık Adınız Giriniz :</label>
								<input type="text" class="form-control" asp-for="Title" id="Title" placeholder="Enter Title Name">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="ImageUrl">Fotoğraf Linkini Giriniz :</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl" placeholder="Enter Image Link">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Description">Açıklama Giriniz :</label>
								<input type="text" class="form-control" asp-for="Description" id="Description" placeholder="Enter Description">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success">Gönder</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


