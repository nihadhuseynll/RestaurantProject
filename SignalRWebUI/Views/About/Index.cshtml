@model List<ResultAboutDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkimda Islemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkimda Liste</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hakkimizda ile ilgili islemleri asagidan gerceklstire biliriz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Baslik</th>
									<th scope="col">Aciklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Guncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.AboutId</td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-outline-success">Guncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/About/CreateAbout" class="btn btn-outline-primary">Yeni Hakkimizda Girisi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

