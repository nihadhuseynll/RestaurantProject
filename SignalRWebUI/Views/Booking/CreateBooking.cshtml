@model CreateBookingDto

@{
	ViewData["Title"] = "CreateBooking";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Rezervasyon Islemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Rezervasyon Girisi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Name">Ad Soyadi</label>
								<input type="text" class="form-control" asp-for="Name" id="Name" placeholder="Name">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Phone">Telefon</label>
								<input type="text" class="form-control" asp-for="Phone" id="Phone" placeholder="Phone">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Mail">Mail Adresi</label>
								<input type="email" class="form-control" asp-for="Mail" id="Mail" placeholder="Mail">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="PersonCount">Kisi Sayisi</label>
								<input type="number" class="form-control" asp-for="PersonCount" id="PersonCount" placeholder="PersonCount">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Date">Rezervasyon Tarihi</label>
								<input type="date" class="form-control" asp-for="Date" id="Date" placeholder="Date">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success">Submit</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

