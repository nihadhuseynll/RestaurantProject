@model List<ResultFeatureDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ozellik Islemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Ozellikler Liste</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Ozellikler ile ilgili islemleri asagidan gerceklstire biliriz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">1.Baslik</th>
									<th scope="col">2.Baslik</th>
									<th scope="col">3.Baslik</th>
									<th scope="col">1.Aciklama</th>
									<th scope="col">2.Aciklama</th>
									<th scope="col">3.Aciklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Guncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.FeatureId</td>
										<td>@item.Title1</td>
										<td>@item.Title2</td>
										<td>@item.Title3</td>
										<td>@item.Description1</td>
										<td>@item.Description2</td>
										<td>@item.Description3</td>
										<td><a href="/Feature/DeleteFeature/@item.FeatureId" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Feature/UpdateFeature/@item.FeatureId" class="btn btn-outline-success">Guncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Feature/CreateFeature" class="btn btn-outline-primary">Yeni Ozellik Girisi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

