@model UpdateDiscountDto

@{
	ViewData["Title"] = "UpdateDiscount";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İndirim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">İndirim Güncelleme</div>
						</div>
						<input type="hidden" asp-for="DiscountId"/>
						<div class="card-body">
							<div class="form-group">
								<label for="Title">Urun Adını Giriniz :</label>
								<input type="text" class="form-control" asp-for="Title" id="Title" placeholder="Title">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Amount">Ürün İndirim Oranını Giriniz :</label>
								<input type="text" class="form-control" asp-for="Amount" id="Amount" placeholder="Amount">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="ImageUrl">Ürün Görselini Giriniz :</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl" placeholder="ImageUrl">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Description">Ürün Açıklamasını Giriniz :</label>
								<input type="text" class="form-control" asp-for="Description" id="Description" placeholder="Description">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success">Gönder</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

