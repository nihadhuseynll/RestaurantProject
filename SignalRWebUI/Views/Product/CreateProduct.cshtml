@model CreateProductDto

@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ürün İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni ürün Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="productname">Ürün Adını Giriniz :</label>
								<input type="text" class="form-control" asp-for="ProductName" id="productname" placeholder="Enter Product Name">
							</div>
							<div class="form-group">
								<label for="price">Ürün Fiyatını Giriniz :</label>
								<input type="text" class="form-control" asp-for="Price" id="price" placeholder="Enter Price">
							</div>
							<div class="form-group">
								<label for="imageurl">Ürün Fotoğraf Linkini Giriniz :</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="imageurl" placeholder="Enter Image Url">
							</div>
							<div class="form-group">
								<label for="kategoryname">Kategori Giriniz :</label>
								@Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.b,new{@class="form-control"})
							</div>
							<div class="form-group">
								<label for="description">Ürün Açıklama Giriniz :</label>
								<input type="text" class="form-control" asp-for="ProductDescription" id="description" placeholder="Enter Description">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success">Gönder</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

