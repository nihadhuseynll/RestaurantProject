@model List<ResultSliderDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Özellik Işlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Özellikler Liste</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Özellikler ile ilgili işlemleri asağidan gerçekleştire bilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">1.Başlik</th>
									<th scope="col">2.Başlik</th>
									<th scope="col">3.Başlik</th>
									<th scope="col">1.Açıklama</th>
									<th scope="col">2.Açıklama</th>
									<th scope="col">3.Açıklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.SliderId</td>
										<td>@item.Title1</td>
										<td>@item.Title2</td>
										<td>@item.Title3</td>
										<td>@item.Description1</td>
										<td>@item.Description2</td>
										<td>@item.Description3</td>
										<td><a href="/Slider/DeleteSlider/@item.SliderId" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Slider/UpdateSlider/@item.SliderId" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Slider/CreateSlider" class="btn btn-outline-primary">Yeni Özellik Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

