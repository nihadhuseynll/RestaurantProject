@model UpdateSocialMediaDto

@{
	ViewData["Title"] = "UpdateSocialMedia";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya Islemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Sosyal Medya Güncelleme</div>
						</div>
						<input type="hidden" asp-for="SocialMediaId"/>
						<div class="card-body">
							<div class="form-group">
								<label for="Title">Başlik Giriniz</label>
								<input type="text" class="form-control" asp-for="Title" id="Title" placeholder="Title">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Icon">Icon Giriniz</label>
								<input type="text" class="form-control" asp-for="Icon" id="Icon" placeholder="Icon">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Url">Url Giriniz</label>
								<input type="text" class="form-control" asp-for="Url" id="Url" placeholder="Url">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success">Submit</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

