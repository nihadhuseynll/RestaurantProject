@model List<ResultContactDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kontakt İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Kontakt Liste</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Kontakt ile ilgili işlemleri asağidan gercekleştire bilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Location</th>
									<th scope="col">Telefon Numarası</th>
									<th scope="col">Email Adres</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Başlık</th>
									<th scope="col">Çalışma Saatleri</th>
									<th scope="col">Çalışma Saatleri Açıklama</th>
									<th scope="col">Saatler</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ContactId</td>
										<td>@item.Location</td>
										<td>@item.Phone</td>
										<td>@item.Mail</td>
										<td>@item.FooterDescription</td>
										<td>@item.FooterTitle</td>
										<td>@item.OpenDays</td>
										<td>@item.OpenDaysDescription</td>
										<td>@item.OpenHours</td>
										<td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Contact/CreateContact" class="btn btn-outline-primary">Gönder</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

