@model UpdateContactDto

@{
	ViewData["Title"] = "UpdateContact";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kontakt İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Kontakt Girişi</div>
						</div>
						<input type="hidden" asp-for="ContactId"/>
						<div class="card-body">
							<div class="form-group">
								<label for="Location">Location Giriniz :</label>
								<input type="text" class="form-control" asp-for="Location" id="Location" placeholder="Location">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Phone">Telefon Numarası Giriniz :</label>
								<input type="text" class="form-control" asp-for="Phone" id="Phone" placeholder="Phone">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Mail">Email Adresini Giriniz :</label>
								<input type="text" class="form-control" asp-for="Mail" id="Mail" placeholder="Mail">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="FooterDescription">Açıklamayı Giriniz :</label>
								<input type="text" class="form-control" asp-for="FooterDescription" id="FooterDescription" placeholder="FooterDescription">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="FooterTitle">Başlık Giriniz :</label>
								<input type="text" class="form-control" asp-for="FooterTitle" id="FooterTitle" placeholder="FooterTitle">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="OpenDays">Çalışma Saatleri :</label>
								<input type="text" class="form-control" asp-for="OpenDays" id="OpenDays" placeholder="OpenDays">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="OpenDaysDescription">Çalışma Saatleri Açiklamayi Giriniz :</label>
								<input type="text" class="form-control" asp-for="OpenDaysDescription" id="OpenDaysDescription" placeholder="OpenDaysDescription">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="OpenHours">Saatleri Giriniz :</label>
								<input type="text" class="form-control" asp-for="OpenHours" id="OpenHours" placeholder="OpenHours">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success">Gönder</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

